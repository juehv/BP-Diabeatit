<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.tu_darmstadt.informatik.tk.diabeatit">

    <application
        android:name=".MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="info.nightscout.androidaps.ui.setup.ActualSetup"></activity>
        <activity
            android:name="info.nightscout.androidaps.ui.setup.SetupInsight"
            android:label="@string/title_activity_setup_insight"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="info.nightscout.androidaps.ui.ManualSportsEntryActivity" />
        <activity android:name="info.nightscout.androidaps.ui.ManualCarbsEntryActivity" />
        <activity android:name="info.nightscout.androidaps.ui.ManualInsulinEntryActivity" />
        <activity android:name="info.nightscout.androidaps.ui.setup.SetupActivity" />
        <activity
            android:name="info.nightscout.androidaps.ui.AlertHistoryActivity"
            android:label="@string/title_activity_alert_history" />
        <activity
            android:name="info.nightscout.androidaps.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="info.nightscout.androidaps.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
</manifest>