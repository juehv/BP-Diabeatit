<resources>

    <style name="diabeatit" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/d_primary</item>
        <item name="android:colorPrimary">@color/d_primary</item>
        <item name="colorPrimaryDark">@color/d_primary_dark</item>
        <item name="android:colorPrimaryDark">@color/d_primary_dark</item>
        <item name="colorAccent">@color/d_accent</item>
        <item name="android:colorAccent">@color/d_accent</item>

        <item name="android:foregroundTint">@android:color/black</item>
        <item name="android:drawableTint">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@color/colorFont</item>
        <item name="android:textColorSecondary">@color/mdtp_dark_gray</item>

        <item name="android:listDivider">@android:color/darker_gray</item>
        <item name="android:titleTextColor">@android:color/black</item>

        <item name="preferenceTheme">@style/diabeatit.PreferenceTheme</item>
        <item name="popupWindowStyle">@style/diabeatit.PopupWindow</item>
<!--
        <item name="dialogPreferenceStyle">@style/diabeatit.PopupWindow</item>
-->
        <item name="alertDialogTheme">@style/diabeatit.PopupWindow</item>
<!--
        <item name="alertDialogStyle">@style/diabeatit.PopupWindow</item>
-->
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/d_primary</item>
        <item name="android:actionModeStyle">@style/PopupTheme.Popup</item>
    </style>

    <style name="PopupTheme.Popup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/d_primary</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:actionModeBackground">@color/d_primary</item>
        <item name="actionModeSplitBackground">@color/d_primary</item>
    </style>

    <style name="diabeatit.PreferenceTheme" parent="PreferenceThemeOverlay">
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="backgroundTint">@android:color/background_light</item>
        <item name="background">@android:color/background_light</item>
        <item name="android:foregroundTint">@color/colorFont</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:colorForeground">@color/colorFont</item>
        <item name="android:textColorPrimary">@color/colorFont</item>
        <item name="android:textColorSecondary">@color/colorFont</item>

        <item name="popupWindowStyle">@style/diabeatit.PopupWindow</item>
    </style>

    <style name="diabeatit.PreferenceTheme.InformationStyle">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:foregroundTint">@color/colorFont</item>
        <item name="android:textAppearance">@style/diabeatit</item>
    </style>

    <style name="diabeatit.NavView" parent="diabeatit">
        <item name="android:textColorSecondary">@color/d_primary_dark</item>
    </style>

    <style name="diabeatit.Container">
        <item name="android:background">@android:color/background_light</item>
    </style>

    <style name="diabeatit.Button">
        <item name="android:foregroundTint">@color/d_primary</item>
        <item name="android:backgroundTint">@color/d_primary</item>
    </style>

    <style name="diabeatit.ButtonPrimary" parent="diabeatit.Button">

    </style>

    <style name="diabeatit.ButtonCancel" parent="diabeatit.Button">
        <item name="android:backgroundTint">@android:color/darker_gray</item>
        <item name="android:foregroundTint">@android:color/darker_gray</item>
    </style>

    <style name="diabeatit.ToggleButton">

    </style>

    <style name="diabeatit.EditText">
        <item name="android:backgroundTint">@color/d_accent</item>
    </style>

    <style name="diabeatit.AssistantCard">
        <item name="android:backgroundTint">@android:color/white</item>
    </style>

    <style name="diabeatit.AssistantButton">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:foregroundTint">@android:color/darker_gray</item>
        <item name="android:backgroundTint">@android:color/white</item>
    </style>

    <style name="diabeatit.PopupWindow" parent="diabeatit">
        <item name="colorPrimary">@color/d_primary</item>
        <item name="android:colorPrimary">@color/d_primary</item>
        <item name="colorPrimaryDark">@color/d_primary_dark</item>
        <item name="android:colorPrimaryDark">@color/d_primary_dark</item>
        <item name="colorAccent">@color/d_accent</item>
        <item name="android:colorAccent">@color/d_accent</item>

        <item name="panelBackground">@color/colorLightGray</item>
        <item name="android:foregroundTint">@android:color/black</item>
        <item name="android:drawableTint">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="itemTextColor">@android:color/black</item>
        <item name="tabTextColor">@android:color/black</item>
        <item name="titleTextColor">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/background_dark</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="boxBackgroundColor">@android:color/background_light</item>

        <item name="android:itemBackground">@android:color/background_light</item>
        <item name="itemBackground">@android:color/background_light</item>
        <item name="android:background">@android:color/background_light</item>
        <item name="background">@android:color/background_light</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:popupBackground">@android:color/background_light</item>
        <item name="textColorAlertDialogListItem">@android:color/black</item>

        <item name="colorControlActivated">@color/d_primary</item>
        <item name="colorControlHighlight">@color/d_accent</item>
        <item name="android:selectableItemBackgroundBorderless">@color/d_primary_dark</item>

        <item name="android:windowIsFloating">true</item>
        <item name="editTextStyle">@style/diabeatit.EditText</item>
        <item name="android:listViewStyle">@style/diabeatit</item>
        <item name="listMenuViewStyle">@style/diabeatit</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavigationDevice" parent="AppTheme">
        <item name="listPreferredItemHeightSmall">64dp</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@android:color/background_light</item>
    </style>

    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.NoActionBar">
        <!-- item name="android:windowBackground">@drawable/launch_screen</item-->
        <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="InsightAlertDialog" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowMinWidthMajor">96%</item>
        <item name="android:windowMinWidthMinor">96%</item>
    </style>

    <style name="Theme.AppCompat.NoTitle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="ButtonSmallFontStyle">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Launcher.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Launcher.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Launcher.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
