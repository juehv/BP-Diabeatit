<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/diabeatit.Container" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1"
            android:layout_margin="5dp">

            <TableRow>

                <TextView
                    android:layout_margin="2dp"
                    android:labelFor="@id/edit_text_bolus"
                    android:text="Bolus:"
                    android:textAlignment="textEnd" />

                <EditText
                    android:id="@+id/edit_text_bolus"
                    style="@style/diabeatit.EditText"
                    android:layout_margin="2dp"
                    android:inputType="numberDecimal"
                    android:text="0" />

                <TextView
                    android:layout_margin="2dp"
                    android:text="U" />
            </TableRow>
            <TableRow>

                <TextView
                    android:layout_margin="2dp"
                    android:labelFor="@id/edit_text_notes"
                    android:text="@string/notes"
                    android:textAlignment="textEnd" />

                <EditText
                    android:id="@+id/edit_text_notes"
                    style="@style/diabeatit.EditText"
                    android:layout_margin="2dp"
                    android:layout_span="2"
                    android:inputType="text" />
            </TableRow>
            <TableRow>
                <Button
                    android:id="@+id/btn_date_time"
                    android:layout_span="3"
                    android:layout_height="72dp"
                    android:text="DATE/TIME"
                    style="@style/diabeatit.Button"/>
            </TableRow>
        </TableLayout>
        <Button
            android:id="@+id/button_enter"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text="@string/enter"
            style="@style/diabeatit.Button"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>