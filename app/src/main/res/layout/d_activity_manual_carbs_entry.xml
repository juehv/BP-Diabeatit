<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ManualCarbsEntryActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textAlignment="textEnd"
                android:text="@string/timepoint"
                android:labelFor="@id/edit_text_timestamp"/>
            <EditText
                android:id="@+id/edit_text_timestamp"
                android:inputType="text"
                android:enabled="false"
                android:layout_margin="2dp" />
            <Button
                android:id="@+id/button_select_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="@string/select" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textAlignment="textEnd"
                android:text="@string/carbs"
                android:labelFor="@id/edit_text_carbs"/>
            <EditText
                android:id="@+id/edit_text_carbs"
                android:layout_margin="2dp"
                android:inputType="numberDecimal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:labelFor="@id/edit_text_carbs"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:text="@string/kcal" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textAlignment="textEnd"
                android:text="@string/notes"
                android:labelFor="@id/edit_text_notes" />
            <EditText
                android:id="@+id/edit_text_notes"
                android:inputType="text"
                android:layout_margin="2dp"
                android:layout_span="2"
                />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/button_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="@string/enter" />


</RelativeLayout>