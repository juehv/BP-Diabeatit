<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        xmlns:card="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        card:cardCornerRadius="8dp"
        card:contentPadding="8dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/card_label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/label_red"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text="urgent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:rotation="90"
                android:src="@drawable/ic_battery_alert"
                android:tint="#535353" />

            <TextView
                android:id="@+id/card_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="2dp"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="#535353"
                android:text="Battery Low" />

            <TextView
                android:id="@+id/card_description1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_label1"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="20dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:textColor="#535353"
                android:text="@string/battery_test_string" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        card:cardCornerRadius="8dp"
        card:contentPadding="8dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/card_label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/label_amber"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text="warning" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/ic_bluetooth_disabled"
                android:tint="#535353" />

            <TextView
                android:id="@+id/card_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="2dp"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="#535353"
                android:text="Sensor Offline" />

            <TextView
                android:id="@+id/card_description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_label2"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="20dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:textColor="#535353"
                android:text="@string/sensor_test_string" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        card:cardCornerRadius="8dp"
        card:contentPadding="8dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/card_label3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/label_gray"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text="info" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/ic_timeline"
                android:tint="#535353" />

            <TextView
                android:id="@+id/card_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="2dp"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="#535353"
                android:text="Summary" />

            <TextView
                android:id="@+id/card_description3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_label3"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="20dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:textColor="#535353"
                android:text="Your weekly summary is ready!\nTap this card to open it." />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        card:cardCornerRadius="8dp"
        card:contentPadding="8dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/card_label4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/label_gray"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text="info" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/ic_feedback"
                android:tint="#535353" />

            <TextView
                android:id="@+id/card_title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="2dp"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="#535353"
                android:text="Feedback" />

            <TextView
                android:id="@+id/card_description4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_label4"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="20dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:textColor="#535353"
                android:text="Please don't forget to give feedback!\nTap this card to start the survey." />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>